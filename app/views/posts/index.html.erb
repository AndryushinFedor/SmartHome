<div class='main'>
<p id="notice"><%= notice %></p>
<div class='searchidea'>
<%= render 'search/form' %>
  <%= link_to image_tag("/images/addidea.svg"), new_device_path %>
</div>
<div>
</div>
<div class="mainBody">
  <table>
    <thead>
      <tr>
        <th class="postName">Название</th>
        <th class="postTitle">Описание</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.tags %></td>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.color %></td>
          <td><%= post.category.name %></td>
          <td><%= raw post.content %></td>
          <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
          <td><%= post.comments.count %> <%= (post.comments.count) == 1 ? 'Comment' : 'Commentes'%></td>
          <td><%= image_tag post.image.url if post.image? %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<p><%= link_to "Новый пост", new_post_path %></p>
<p><%= link_to 'New Category', new_category_path %></p>

</div>