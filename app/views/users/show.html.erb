<p>ID <%= @user.id %></p>
<p>Почта: <%= @user.email %></p>
<p>Ник: <%= @user.username %></p>

######
<p> Avatar </p>
<%= image_tag(@user.avatar.url, alt: 'Avatar') if @user.avatar? %>

<p>Update avatar</p>
<%= form_for @user, url: update_avatar_path do |f| %>
  <%= f.file_field :avatar %>
  <%= f.submit 'Upload' %>
<% end %>

<p>Liked posts tags</p>
<% @liked_posts_tags&.each do |tag| %>
  <span class="tag"><%= tag %></span>
<% end %>

<p>Devices</p>
<div class='devFlex'>
<%= react_component 'devices/A_DevicesList', { devices: @devices } %>
</div>

<p>Interesting</p>
<%= react_component 'A_NewsPostsList', { posts: @actual_posts } %>

<p>User Posts</p>
<%= react_component 'A_NewsPostsList', { posts: @user_posts } %>
########


<% if user_signed_in? && current_user.isadmin == true %>
  <p>Аккаунт администратора: <%= @user.isadmin %></p>
<% end %>
Followers <%= @user.followers.count %>
Following <%= link_to @user.followees.count, following_path %>
<br>

In favorites <%= @user.favorites.count %> <%= (@user.favorites.count) == 1 ? 'Post' : 'Posts'%>

<% @posts.each do |post| %>
  <br><%= link_to post.title, post %>
  <br><%= post.content.html_safe %>
<% end %>

<% if user_signed_in? && @user.id == current_user.id %>
    <%= link_to 'Edit Profile', edit_user_registration_path %>
<% elsif user_signed_in? && current_user.followees.include?(@user) %>
    <h5><%= button_to "Unfollow", unfollow_user_path, method: "POST" %></h5>
<% elsif user_signed_in? %>
    <h5><%= button_to "Follow", follow_user_path, method: "POST"  %></h5>
<% else %>
<%# можно добавить кнопку для регистрации или что-нибудь ещё  %>
<% end%>

<% if user_signed_in? && current_user.isadmin == true %>
<div class="acc">
    <h1>Администратор</h1>
    <p>Добро пожаловать, Олег</p>
    <h2>Пользователи</h2>
    <%= render "users/users" %>
        <div class="">
          <%= render "users/categories" %>
    </div>
</div>

<% end %>
